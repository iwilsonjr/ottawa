    src: url('type/FunctionPro-Medium-webfont.eot');
    src: url('type/FunctionPro-Medium-webfont.eot?#iefix') format('embedded-opentype'),
         url('type/FunctionPro-Medium-webfont.woff') format('woff'),
         url('type/FunctionPro-Medium-webfont.ttf') format('truetype'),
